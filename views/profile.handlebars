<div class="container">
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span>Welcome {{user.fName}}</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>
                <p>
                    <strong>id</strong>: {{user.id}}
                    <br>
                    <strong>username</strong>: {{user.username }}
                    <br>
                    <!-- <strong>password</strong>: {{user.password }} -->
                    <strong>Name</strong>: {{user.fName }} {{user.lName}}
                    <br>
                    <strong>Email</strong>: {{user.email}}
                    <br>
                </p>
            </div>
        </div>
    </div>
    <!-- blogs dump here -->
    <!-- new blob -->
    <div class="col-6 text-center">

    </div>
    {{#each post}}
    <div class="pages">
        <div class="blog">
            <div class="blog-post">
                <h2 class="blog-post-title">{{this.title}}</h2>
                <p class="blog-post-meta">{{formatDt this.createTime}}<a href="#">{{this.username}}</a></p>
                {{this.content}}

            </div>
        </div>
    </div>
    {{/each}}
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Write A New Blog</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                      <form class="create-form" id="myForm">
                        <div class="form-group">
                            <label for="blog-title">Title:</label>
                            <input type="text" class="form-control" id="blog-title" placeholder="Title of your blog">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" id="blog-content" name="blog-content" rows="6" placeholder="Blog Post goes here" required="true" autofocus></textarea>
                            <button class="btn btn-outline-dark" type="submit">Add Post
                                <i class="fa fa-plus" aria-hidden="true"></i></button>
                        </div>
                    </form>
                </div>
               
                <div class="modal-footer">
          
                </div>
            </div>
        </div>
    </div>

</div>